        <Label Content="Kleurcode" HorizontalAlignment="Left" Margin="59,276,0,0" VerticalAlignment="Top"/>
        <Label Content="Informatie" HorizontalAlignment="Left" Margin="59,307,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TxtKleurcode" HorizontalAlignment="Left" Margin="126,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="TxtInformatie" HorizontalAlignment="Left" Margin="126,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
